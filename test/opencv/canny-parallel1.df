df canny-parallel1 {
    topology {
        nodes = A,B,C,D;
	edges = e1(A,B), e2(B,C), e3(C,D);
    }
    actor A {
    	computation = VideoCaptureSplit;
	file_name = pedestrian.mp4;
	level = 1;
	host = 127.0.0.1;
	cpu = 0;
    }
    actor B {
    	computation = CvtColor;
	host = 127.0.0.1;
	input_port = 7300;
	cpu = 1;
    }
    actor C {
    	computation = Canny;
	host = 127.0.0.1;
	input_port = 7200;
	cpu = 2;
    }
    actor D {
    	computation = ImageWriteMerge;
	level = 1;
	input_port = 7100;
	host = 127.0.0.1;
	cpu = 3;
    }
    parameter {
	distributed = false;
	scheduling = true;
	logging = false;
	discovery_host = 127.0.0.1;
	discovery_port = 7000;
    }
}
