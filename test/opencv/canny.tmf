tmf canny {
    topology {
        nodes = A,B,C,D;
	edges = e1(A,B), e2(B,C), e3(C,D);
    }
    actor A {
    	computation = VideoCapture;
        file_name = pedestrian.mp4;
	host = 127.0.0.1;
    }
    actor B {
    	computation = CvtColor;
	host = 127.0.0.1;
	input_port = 7003;
    }
    actor C {
    	computation = Canny;
	threshold = 100;
	ratio = 2;
	host = 127.0.0.1;
	input_port = 7002;
    }
    actor D {
    	computation = ImageWrite;
	host = 127.0.0.1;
	input_port = 7001;
    }
    parameter {
	distributed = true;
	discovery_host = 127.0.0.1;
	discovery_port = 7000;
    }
}

