df vcanny {
    topology {
        nodes = A,B,C,D,E;
	edges = e1(A,B), e2(B,C), e3(C,D), e4(D,E);
    }
    actor A {
    	computation = VideoCapture;
        file_name = pedestrian.mp4;
	host = 127.0.0.1;
    }
    actor B {
    	computation = CvtColor;
	host = 127.0.0.1;
	input_port = 7004;
    }
    actor C {
    	computation = Canny;
	threshold = 100;
	ratio = 2;
	host = 127.0.0.1;
	input_port = 7003;
    }
    actor D {
    	computation = CvtColor;
	cvt = gray2bgr;
	host = 127.0.0.1;
	input_port = 7002;
    }
    actor E {
     	computation = VideoWriter;
        file_name = vcanny.avi;
	host = 127.0.0.1;
	input_port = 7001;
    }
    parameter {
	distributed = true;
	discovery_host = 127.0.0.1;
	discovery_port = 7000;
    }
}

