df split {
    topology {
        nodes = A,B,C,D,E,F;
	edges = e1(A,B), e2(B,C), e3(C,D), e4(D,E), e5(E,F);
    }
    actor A {
    	computation = VideoCapture;
	file_name = pedestrian.mp4;
	host = 127.0.0.1;
	cpu = 0;
    }
    actor B {
    	computation = MatSplit;
	level = 1;
	host = 127.0.0.1;
	input_port = 7500;
	cpu = 1;
    }
    actor C {
    	computation = CvtColor;
	host = 127.0.0.1;
	input_port = 7400;
	cpu = 2;
    }
    actor D {
    	computation = Canny;
	host = 127.0.0.1;
	input_port = 7300;
	cpu = 3;
    }
    actor E {
    	computation = MatMerge;
	level = 1;
	input_port = 7200;
	host = 127.0.0.1;
	cpu = 4;
    }
    actor F {
    	computation = ImageWrite;
	input_port = 7100;
	host = 127.0.0.1;
	cpu = 5;
    }
    parameter {
	distributed = false;
	scheduling = true;
	discovery_host = 127.0.0.1;
	discovery_port = 7000;
    }
}
