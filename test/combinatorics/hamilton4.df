df hamilton1 {
    topology {
        nodes = A,B,C,D;
        edges = e1(A,B), e2(B,C), e3(C,D), e4(D,B), e5(C,A);
    }
    actor A {
        computation = Hamilton;
        nbnodes = 4;
	cpu = 0;
    }
    actor B {
        computation = Hamilton;
        nbnodes = 4;
	cpu = 1;
    }
    actor C {
        computation = Hamilton;
        nbnodes = 4;
	cpu = 2;
    }
    actor D {
        computation = Hamilton;
        nbnodes = 4;
	cpu = 3;
    }
    parameter {
	scheduling = true;
    	logging = true;
    }
}
